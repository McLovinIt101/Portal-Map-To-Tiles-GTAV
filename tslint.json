{
  "extends": "tslint:recommended",
  "rules": {
    "quotemark": [true, "single"],
    "semicolon": [true, "always"],
    "trailing-comma": [true, {
      "multiline": "always",
      "singleline": "never"
    }],
    "indent": [true, "spaces", 2],
    "no-var-keyword": true,
    "prefer-const": true
  }
}
